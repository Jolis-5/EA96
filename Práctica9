  public static int hourglassSum(List<List<Integer>> arr) {

  //declaramos una variable para guardar la suma máxima
        int maxSum = 0;

// el primer for recorre la matriz hasta la fila 3
        for (int i = 0; i <= 3; i++) {

//el segundo recorre la matriz pero ahora hasta la columna 3 para cumplir con la estructura del "reloj de arena"
            for (int j = 0; j <= 3; j++) {

 // declaramos una variable para la suma con las posiciones del reloj de arena
                int sum = arr.get(i).get(j) + arr.get(i).get(j + 1) + arr.get(i).get(j + 2) //vamos sumando en una posición específica
                               + arr.get(i + 1).get(j + 1)
                + arr.get(i + 2).get(j) + arr.get(i + 2).get(j + 1) + arr.get(i + 2).get(j + 2);

// comparamos si la suma es mayor que la suma máxima, asignamos el valor de sum a maxSum
            if( maxSum < sum){
                maxSum = sum;
            }

            }
        }
        return maxSum;
    }
}
